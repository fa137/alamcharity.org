---
import { Picture } from "@astrojs/image/components";

export interface Props {
	title?: string;
	subtitle?: string;
	image?: string | any; // TODO: find HTMLElementProps
}

const {
	title = await Astro.slots.render("title"),
	subtitle = await Astro.slots.render("subtitle"),
	image = await Astro.slots.render("image"),
} = Astro.props;
---

<section class="relative md:-mt-[76px]">
	<div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
	<div class="relative max-w-7xl mx-auto px-4 sm:px-6">
		<div class="pt-0 md:pt-[76px] pointer-events-none"></div>
		<div
			class="py-12 md:py-20 lg:py-0 lg:flex lg:items-center lg:h-screen lg:gap-8"
		>
			<div class="basis-1/2 text-center lg:text-left pb-10 md:pb-16 mx-auto">
				{
					title && (
						<h1
							class="text-3xl md:text-4xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200"
							set:html={title}
						/>
					)
				}
				<div class="max-w-3xl mx-auto lg:max-w-none">
					{
						subtitle && (
							<p
								class="text-base text-muted mb-6 dark:text-slate-300"
								set:html={subtitle}
							/>
						)
					}
				</div>
			</div>
			<div class="basis-1/2">
				{
					image && (
						<div class="relative m-auto max-w-5xl">
							{typeof image === "string" ? (
								<Fragment set:html={image} />
							) : (
								<Picture
									class="mx-auto rounded-md w-full"
									widths={[400, 768, 1024, 2040]}
									sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
									aspectRatio={600 / 600}
									loading="eager"
									width={600}
									height={600}
									{...image}
								/>
							)}
						</div>
					)
				}
			</div>
		</div>
	</div>
</section>
